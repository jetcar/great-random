<Window x:Class="GreatRandom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:greatRandom="clr-namespace:GreatRandom"
        Title="MainWindow"
        Width="525"
        Height="650"
        Closing="MainWindow_OnClosing"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal">
            <Button Margin="20"
                    HorizontalAlignment="Left"
                    Content="Start"
                    Click="ButtonBase_OnClick"
                    FontSize="20"
                    FontWeight="Bold"
                    Padding="10" />
                <Button Margin="20"
                    HorizontalAlignment="Left"
                    Content="Reset"
                    Click="Reset_click"
                    FontSize="20"
                    FontWeight="Bold"
                    Padding="10" />
            </StackPanel>
            <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding CurrentCount}" />
            <Button Margin="20"
                    HorizontalAlignment="Right"
                    Content="Stop"
                    Click="ButtonBase_OnClick2"
                    FontSize="20"
                    FontWeight="Bold"
                    Padding="10" />
        </Grid>
        <ListView Grid.Row="1" ItemsSource="{Binding NumbersCollection}">
            <ListView.ItemTemplate>
                <DataTemplate DataType="greatRandom:NumberStatistic">
                    <StackPanel Orientation="Horizontal">
                        <Label Width="50" Content="{Binding Number}" />
                        <Grid>
                            <Border Width="{Binding BarWidth}"
                                    Background="{Binding Color}"
                                    BorderBrush="Black"
                                    BorderThickness="1,1,1,1" />
                        </Grid>
                        <Label Content="{Binding Count}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
